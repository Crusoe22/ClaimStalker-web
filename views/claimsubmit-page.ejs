<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Claim Page</title>
    <link rel="stylesheet" href="claimsubmit-page.css">
    <link rel="icon" type="image/jpg" href="/images/Imagecrop2.jpg">
    <!--Browser Script-->
    <script src="/sendemail.js"></script>
    <script
        type="text/javascript"
        src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"
    ></script>
    <script type="text/javascript">
        (function () {
        emailjs.init("XAK08bD4-jvsI0Ro0");
        })();
    </script>
</head>
<body>

    <!-- Include Sidebar -->
    <%- include('sidebar') %>

    <!-- Main Account Content -->

    <!--test email: S573653@nwmissouri.edu-->
    <form action="/submit-and-send-email" method="POST">
        <h1>Submit Your Claim</h1>

        <!-- Policy Number -->
        <div>
            <label for="policyNumber">Policy Number</label>
            <input type="text" id="policyNumber" name="policyNumber" placeholder="Policy Number" required>
        </div>

        <!-- Insurance Company Name -->
        <div>
            <label for="insuranceCompany">Insurance Company Name</label>
            <input type="text" id="insuranceCompany" name="insuranceCompany" placeholder="Insurance Co." required>
        </div>

        <!-- Name -->
        <div>
            <label for="name">Insured Name</label>
            <input type="text" id="name" name="name" placeholder="John Doe" required>
        </div>

        <!-- Email -->
        <div>
            <label for="email">Insured Email</label>
            <input type="email" id="email" name="email" placeholder="example@email.com" required>
        </div>

        <!-- Phone Number -->
        <div>
            <label for="phone">Insured Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="(123) 456-7890" required>
        </div>

        <!-- Date of Loss -->
        <div>
            <label for="claimDate">Date of Loss</label>
            <input type="date" id="claimDate" name="claimDate" required>
        </div>

        <!-- Auto Loss -->
        <div>
            <label for="autoLoss">Auto Loss</label>
            <select id="autoLoss" name="autoLoss">
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
        </div>

        <!-- Property Loss -->
        <div>
            <label for="propertyLoss">Property Loss</label>
            <select id="propertyLoss" name="propertyLoss">
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
        </div>

        <!-- Location -->
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="location" placeholder="Location of Loss" required>
        </div>


        <!-- Description -->
        <div>
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Describe the claim..." rows="4" required></textarea>
        </div>

        <!-- Reset and Submit Buttons -->
        <div>
            <input type="reset" value="Reset">
            <input type="submit" value="Submit"> <!--TODO: make so it doesn't send to second page-->
        </div>

    </form>


</body>
</html>

