<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Claim</title>
    <link rel="stylesheet" href="claimsubmit-page.css">
    <link rel="icon" type="image/jpg" href="/images/Imagecrop2.jpg">
    
</head>
<body>

    <!-- Sidebar -->
    <%- include('sidebar') %>

    <!-- Main Claim Form -->
    <main class="content">
        <form id="claimForm" class="claim-form">
            <h1>Submit Your Claim</h1>
            <p class="form-intro">Fill in the details below to quickly submit your insurance claim.</p>

            <!-- Form fields -->
            <div class="form-grid">
                <div class="form-group">
                    <label for="policyNumber">Policy Number</label>
                    <input type="text" id="policyNumber" name="policyNumber" placeholder="Policy Number" required>
                </div>

                <div class="form-group">
                    <label for="insuranceCompany">Insurance Company</label>
                    <input type="text" id="insuranceCompany" name="insuranceCompany" placeholder="Insurance Co." required>
                </div>

                <div class="form-group">
                    <label for="name">Insured Name</label>
                    <input type="text" id="name" name="name" placeholder="John Doe" required>
                </div>

                <div class="form-group">
                    <label for="email">Insured Email</label>
                    <input type="email" id="email" name="email" placeholder="example@email.com" required>
                </div>

                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" id="phone" name="phone" placeholder="(123) 456-7890" required>
                </div>

                <div class="form-group">
                    <label for="claimDate">Date of Loss</label>
                    <input type="date" id="claimDate" name="claimDate" required>
                </div>

                <div class="form-group">
                    <label for="autoLoss">Auto Loss</label>
                    <select id="autoLoss" name="autoLoss">
                        <option value="yes">Yes</option>
                        <option value="no" selected>No</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="propertyLoss">Property Loss</label>
                    <select id="propertyLoss" name="propertyLoss">
                        <option value="yes">Yes</option>
                        <option value="no" selected>No</option>
                    </select>
                </div>

                <div class="form-group full-width">
                    <label for="location">Location of Loss</label>
                    <input type="text" id="location" name="location" placeholder="123 Main St, Springfield" required>
                </div>

                <div class="form-group full-width">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="4" placeholder="Describe the claim..." required></textarea>
                </div>
            </div>

            <!-- Form buttons -->
            <div class="form-buttons">
                <input type="reset" value="Reset">
                <input type="submit" value="Submit">
            </div>
        </form>
    </main>

    <!-- Popup Modal (Success/error messages) -->
    <div id="popupModal" class="modal">
        <div class="modal-content">
            <h2 id="popupMessage"></h2>
            <button class="close-btn" onclick="closeModal()">Close</button>
        </div>
    </div>

    <!-- JavaScript for handling form submission and modal -->
    <script>
        let submissionSuccess = false; // Track if submission was successful
        const claimForm = document.getElementById("claimForm");
        const modal = document.getElementById("popupModal");
        const popupMessage = document.getElementById("popupMessage");
        
        // Handle form submission
        claimForm.addEventListener("submit", async (e) => {
            e.preventDefault();

             // Collect form data
            const formData = new FormData(claimForm);
            const data = Object.fromEntries(formData.entries());

            try {
                // Send form data to backend
                const response = await fetch("/submit-and-send-email", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data)
                });
                
                // Parse server response
                const result = await response.json();

                // Show success message in modal
                popupMessage.textContent = result.message;
                modal.style.display = "flex"; // Show modal

                // Track success â†’ reload later if user closes modal
submissionSuccess = result.success;
            } catch (err) {
                // Show error message in modal
                popupMessage.textContent = "An error occurred. Please try again.";
                modal.style.display = "flex";
            }
        });
        
         // Function to close modal
            function closeModal() {
            modal.style.display = "none";

            if (submissionSuccess) {
                // Only reload if the claim successfully saved + (email sent or failed gracefully)
                window.location.reload();
            }
        }


        // Allow close modal if user clicks outside the box
        window.onclick = function(event) {
            if (event.target === modal) {
                closeModal();
            }
        };
    </script>
</body>
</html>
