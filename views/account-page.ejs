<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %>'s Account</title>
    <link rel="stylesheet" href="/account-page.css">
    <link rel="icon" type="image/jpg" href="/images/Imagecrop2.jpg">
</head>
<body>

    <!-- Include Sidebar -->
    <%- include('sidebar') %>

    <div class="account-container">
        <h1>My Account</h1>

        <!-- Profile Section -->
        <section class="profile-section">
            <h2 class="account-heading">Profile Information</h2>
            <div class="profile-info">
                <label for="username">Username:</label>
                <span id="username"><%= user.username %></span>

                <label for="email">Email:</label>
                <span id="email"><%= user.email %></span>

                <label for="phone">Phone Number:</label>
                <span id="phone"><%= user.phone || 'Not provided' %></span>

                <button class="edit-profile-btn">Edit Profile</button>
            </div>
        </section>


        <!-- Security Section -->
        <section class="security-section">
            <h2 class="account-heading">Security</h2>
            <div class="security">
                <label>Password:</label>
                <button class="change-password-btn">Change Password</button>
                
                <label>Two-Factor Authentication:</label>
                <button class="setup-2fa-btn">Enable 2FA</button>
            </div>
        </section>

        <!-- Account Actions Section -->
        <section class="actions-section">
            <h2 class="account-heading">Actions</h2>
            <div class="actions">
                <button class="logout-btn">Logout</button>
                <button class="delete-account-btn">Delete Account</button>
            </div>
        </section>
    </div>
</body>
</html>
