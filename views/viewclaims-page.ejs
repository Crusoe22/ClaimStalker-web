<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Claims</title>
    <link rel="stylesheet" href="/viewclaims-page.css">
    <link rel="icon" type="image/jpg" href="/images/Imagecrop2.jpg">
</head>
<body>
    <!-- Sidebar -->
    <%- include('sidebar') %>

    <!-- Main Content -->
    <div class="main-content">
        <header>
            <h1>View Your Claims</h1>
            <p>Search by Policy Number to view submitted claims.</p>
        </header>

        <!-- Search Form -->
        <form action="/view-claim" method="GET" class="search-form">
            <div class="form-group">
                <input type="text" id="policyNumber" name="policyNumber" placeholder="Enter Policy Number..." required>
                <button type="submit">üîç Search</button>
            </div>
        </form>

        <!-- Results Section -->
        <div class="results">
            <% if (claims && claims.length > 0) { %>
                <% claims.forEach(function(claim, index) { %>
                    <div class="claim-card">
                        <h2>Claim <%= index + 1 %></h2>
                        <div class="claim-info">
                            <p><strong>Email:</strong> <%= claim.email %></p>
                            <p><strong>Name:</strong> <%= claim.name %></p>
                            <p><strong>Phone:</strong> <%= claim.phone %></p>
                            <p><strong>Policy Number:</strong> <%= claim.policyNumber %></p>
                            <p><strong>Insurance Company:</strong> <%= claim.insuranceCompany %></p>
                            <p><strong>Date of Loss:</strong> <%= claim.claimDate.toDateString() %></p>
                            <p><strong>Auto Loss:</strong> <%= claim.autoLoss %></p>
                            <p><strong>Property Loss:</strong> <%= claim.propertyLoss %></p>
                            <p><strong>Location:</strong> <%= claim.location %></p>
                            <p><strong>Description:</strong> <%= claim.description %></p>
                        </div>
                    </div>
                <% }) %>
            <% } else if (typeof claims !== 'undefined') { %>
                <div class="no-results">
                    <p>‚ö†Ô∏è No claims found for the provided policy number.</p>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
