<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Claim Status</title>
    <link rel="stylesheet" href="/viewclaims-page.css">
    <link rel="icon" type="image/jpg" href="/images/Imagecrop2.jpg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <%- include('sidebar') %>

    <main class="page-content">
        <h1 class="page-title">Check Your Claim Status</h1>
        
        <!-- Search Section -->
        <div class="search-container">
            <form action="/view-claim" method="GET" class="search-form">
                <label for="searchType" class="search-label">Search By:</label>
                <select id="searchType" name="searchType" class="search-select">
                    <option value="policyNumber">Policy Number</option>
                    <option value="name">Name</option>
                    <option value="phone">Phone Number</option>
                </select>

                <input 
                    type="text" 
                    id="searchValue" 
                    name="searchValue" 
                    required 
                    placeholder="Enter your search value..." 
                    class="search-input"
                >

                <button type="submit" class="search-button">
                    <i class="fas fa-search"></i> Search
                </button>
            </form>
        </div>

        <!-- Claim Results: Excel-Style Table -->
        <% if (claims && claims.length > 0) { %>
            <div class="table-container">
                <h2 class="section-title">Claim Results</h2>

                <table class="claim-table">
                    <thead>
                        <tr>
                            <th>Policy #</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Insurance Company</th>
                            <th>Date of Loss</th>
                            <th>Location</th>
                            <th>Auto Loss</th>
                            <th>Property Loss</th>
                            <th>Description</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% claims.forEach(claim => { %>
                            <tr>
                                <td><%= claim.policyNumber %></td>
                                <td><%= claim.name %></td>
                                <td><%= claim.email %></td>
                                <td><%= claim.phone %></td>
                                <td><%= claim.insuranceCompany %></td>
                                <td><%= claim.claimDate ? claim.claimDate.toDateString() : '' %></td>
                                <td><%= claim.location %></td>
                                <td><%= claim.autoLoss ? "Yes" : "No" %></td>
                                <td><%= claim.propertyLoss ? "Yes" : "No" %></td>
                                <td><%= claim.description %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        <% } else if (typeof claims !== "undefined") { %>
            <div class="no-results-message">
                <i class="fas fa-exclamation-triangle"></i>
                <p>No claims were found for your search. Please try again.</p>
            </div>
        <% } %>
    </main>
</body>
</html>